@using VideoStore.Common.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Genre genre = (Genre) ViewBag.Genre;
    IEnumerable<Movie> movies = (IEnumerable<Movie>) ViewBag.Movies;
}

<div class="page-header">
    <h2>@genre.Title <br /><small><a href="/Genres">Back to genres</a></small></h2>
</div>

<div class="row">
    
    @foreach (var movie in movies)
    {
        <div class="col-sm-3">
            <h3><a href="/Movies/View/@movie.MovieId">@movie.Title</a></h3>
        </div>
    }

</div>


